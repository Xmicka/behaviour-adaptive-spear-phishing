{
    "manifest_version": 3,
    "name": "Adaptive Security — Behavioral Monitor",
    "version": "1.0.0",
    "description": "Silent behavioral data collector for the Adaptive Spear Phishing Simulation Platform. Captures metadata-level browsing patterns (navigation, clicks, focus) — no passwords, keystrokes, or personal content.",
    "permissions": [
        "tabs",
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "https://localhost:8000/*"
    ],
    "background": {
        "service_worker": "js/service-worker.js"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "js/config.js",
                "js/content.js"
            ],
            "run_at": "document_idle",
            "all_frames": false
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png"
        },
        "default_title": "Adaptive Security Monitor (Active)"
    },
    "minimum_chrome_version": "110"
}